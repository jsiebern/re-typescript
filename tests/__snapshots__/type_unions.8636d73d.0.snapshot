module Test = {
  module ValueOrArray: {
    type t('T);
    let t: 'T => t('T);
    let array: array(t('T)) => t('T);
  } = {
    [@unboxed]
    type t('T) =
      | Any('a): t('T);
    let t = (v: 'T) => Any(v);
    let array = (v: array(t('T))) => Any(v);
  };
  type valueOrArray('T) = ValueOrArray.t('T);
};

