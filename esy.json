{
  "name": "re_typescript",
  "description": "",
  "scripts": {
    "dev": "esy dune build ./src/re_typescript_exec.bc.js",
    "dev-watch": "esy x redemon --paths=src --extensions=re,atd,mll,mly ./dev.sh",
    "tests": "esy dune build ./tests/RunTests.bc.js",
    "format": "dune build @fmt --auto-promote --root ."
  },
  "dependencies": {
    "@opam/atdgen": "2.2.1",
    "@opam/base-unix": "base",
    "@opam/containers": "2.8.1",
    "@opam/dune": "*",
    "@opam/gen_js_api": "1.0.6",
    "@opam/iter": "1.2.1",
    "@opam/js_of_ocaml": "3.6.0",
    "@opam/js_of_ocaml-ppx": "3.6.0",
    "@opam/logs": "0.7.0",
    "@opam/lwt": "5.3.0",
    "@opam/lwt_ppx": "2.0.1",
    "@opam/menhir": "*",
    "@opam/ocaml-migrate-parsetree": "*",
    "@opam/ppx_tools": "6.2",
    "@opam/ppx_tools_versioned": "*",
    "@opam/websocket-lwt-unix": "2.14",
    "@reason-native/console": "^0.1.0",
    "@reason-native/file-context-printer": "^0.0.3",
    "@reason-native/fp": "^0.0.1",
    "@reason-native/pastel": "^0.3.0",
    "isexe": "^2.0.0",
    "pkg": "^4.4.9"
  },
  "devDependencies": {
    "@opam/reason": ">=3.6.0",
    "ocaml": "~4.8.0",
    "@opam/js_of_ocaml-compiler": "3.6.0",
    "refmterr": "~3.3.0",
    "@opam/ocaml-lsp-server": "ocaml/ocaml-lsp:ocaml-lsp-server.opam",
    "@reason-native/rely": "^3.2.1"
  },
  "esy": {
    "build": [
      [
        "refmterr",
        "dune",
        "build",
        "--profile",
        "dev",
        "-p",
        "#{self.name}"
      ]
    ],
    "buildsInSource": "_build",
    "exportedEnv": {
      "PROJECT_ROOT": {
        "val": "#{self.root : $PROJECT_ROOT}",
        "scope": "global"
      }
    }
  }
}